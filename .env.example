# ==== API Keys (Required for AI features) ====
# Gemini API Key - Get from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Optional) - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# FRED API Key (Optional, for economic data) - Get from https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# ==== Data Directories ====
DATA_DIR=us_market
LOG_DIR=logs
HISTORY_DIR=us_market/history
LOG_LEVEL=INFO
STALE_THRESHOLD_MIN=60
AI_SUMMARY_MAX_CHARS=1500
AI_SUMMARY_TTL_SEC=1800
AI_SUMMARY_REGEN_COOLDOWN_SEC=30
PERF_ENABLE_THREADS=0
PERF_MAX_WORKERS=4
OPT_PREMIUM_HIGH_USD=1000000
OPT_PREMIUM_MID_USD=300000
OPT_VOL_OI_RATIO_HIGH=5
OPT_VOL_OI_RATIO_MID=3
OPT_VOLUME_LARGE=5000
OPT_IV_HIGH=80
FLASK_ENV=development
HOST=0.0.0.0
PORT=5001
